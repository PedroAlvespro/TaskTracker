        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Tarefa"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TarefaDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TarefaDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TarefaDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Tarefa/{tarefaId}/concluir": {
      "put": {
        "tags": [
          "Tarefa"
        ],
        "parameters": [
          {
            "name": "tarefaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
